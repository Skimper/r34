{
	"env": {
		"node": true,
		"es6": true,
		"mocha": true
	},
    "parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
	"rules": { 
    	"no-console": 1,
		"no-inferrable-types": [0, "ignore-params"],
		"@typescript-eslint/no-inferrable-types": 0,
		"semi": [2, "always"]
	}
}